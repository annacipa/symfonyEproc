
 {{ include('home.html.twig') }}
{% block title %}Aplikim{% endblock %}

{% block body %}
    <h1>Aplikim</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aplikim.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ aplikim.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ aplikim.description }}</td>
            </tr>
            <tr>
                <th>Fondlimit</th>
                <td>{{ aplikim.fondlimit }}</td>
            </tr>
            <tr>
                <th>Adresedorezimi</th>
                <td>{{ aplikim.adresedorezimi }}</td>
            </tr>
            <tr>
                <th>Datehapje</th>
                <td>{{ aplikim.datehapje ? aplikim.datehapje|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datembyllje</th>
                <td>{{ aplikim.datembyllje ? aplikim.datembyllje|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Licence</th>
                <td>{{ aplikim.licence }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('aplikim_index') }}"><button type="button" class="btn btn-outline-warning">back to list</button></a>

    <a href="{{ path('aplikim_edit', {'id': aplikim.id}) }}"><button type="button" class="btn btn-outline-warning">edit</button></a>

    {{ include('aplikim/_delete_form.html.twig') }}
{% endblock %}
